@model EffortlessKitchen.Models.ViewModels.ChefFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex flex-wrap justify-content-between header-stuff">
    <h3><strong>Edit Chef</strong></h3>
</div>

<h4>Be sure to save any changes you make!</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialties" class="control-label"></label>
                <input asp-for="Specialties" class="form-control" />
                <span asp-validation-for="Specialties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedMenuOptionIds" class="control-label"></label>
                <select multiple asp-for="SelectedMenuOptionIds" asp-items="@Model.MenuOptions" class="form-control">
                    <option disabled>Select Genres</option>
                </select>
                <span asp-validation-for="SelectedMenuOptionIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary card-link" />
                <a class="card-link" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
